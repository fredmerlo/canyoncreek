@model Purina.CanyonCreekRanch.Common.Entities.Product
@using Purina.CanyonCreekRanch.Common.Entities

@section Meta {
  @Html.Raw(Model.Meta)
}
    <!-- MY REAL Begin Content -->

     <!-- Begin Content -->

    <div id="content" class="snacks">
      <!-- Begin Content Wrap -->

      <div class="wrap">
        <!-- Begin AddThis Button -->

        <div id="addthis">
          <div class="addthis_toolbox addthis_default_style addthis">
            <a href="http://www.addthis.com/bookmark.php?v=250&pubid=xa-4f7b288c1af4d69b" class="addthis_button_compact">Share</a> <span class="addthis_separator">|</span> <a class="addthis_button_preferred_1"></a> <a class="addthis_button_preferred_2"></a> <a class="addthis_button_preferred_3"></a> <a class="addthis_button_preferred_4"></a>
          </div><script type="text/javascript" src="http://s7.addthis.com/js/250/addthis_widget.js#pubid=xa-4f7b288c1af4d69b">
</script>
        </div><!-- End AddThis Button -->
        <hr />
        <!-- Begin Snack -->
        <!-- Begin Product Left Navigation -->
        @Html.ActionLink(" ", ((Product)TempData["previous"]).FriendlyUrl, new { controller = "Product" }, new { @class = "arrows left" })
        <!-- End Product Left Navigation -->

        <div class="@(Model.ResourcePrefix == "trail-mix-for-dogs" || Model.ResourcePrefix == "western-grill" ? "snack_content_variety" : "snack_content")">
        @if (Model.ResourcePrefix == "trail-mix-for-dogs") {
          <img src="/img/products/@Model.ResourcePath/@Model.ResourcePrefix/product.png " class="float_left_snack_trail_mix" />
          } else if (Model.ResourcePrefix == "western-grill") {
           <img src="/img/products/@Model.ResourcePath/@Model.ResourcePrefix/product.png " class="float_left_snack_western_grill" />
          } else {
            <img src="/img/products/@Model.ResourcePath/@Model.ResourcePrefix/product.png " class="float_left_snacks" />
          }


          <h2>@Html.DisplayFor(model => model.Title)</h2>
          <h1>@Html.Raw(Model.TagLine)</h1>

          @Html.Raw(Model.Description)

          @if (Model.GuaranteeTable.Length > 0) {
            <h6>GUARANTEED ANALYSIS:</h6>
            @Html.Raw(Model.GuaranteeTable)
           }
	
          @if (Model.Ingredients.Length > 0) {
           <h6>Ingredients:</h6>
           @Html.Raw(Model.Ingredients)
          }

          <h6>DAILY MAXIMUM NUMBER OF PIECE(S) BASED ON YOUR DOG'S WEIGHT</h6>

          @Html.Raw(Model.FeedTable)

          
        </div><!-- End Snack -->
        <!-- Begin Product Right Navigation -->
        @Html.ActionLink(" ", ((Product)TempData["next"]).FriendlyUrl, new { controller = "Product" }, new { @class = "arrows right" })
        <!-- End Product Right Navigation -->
        <hr class="margin40" />
        <!-- Begin Left Column -->

        <div class="leftcol">
          <div id="natural_dog_food">
            <span class="large_white_text">NATURAL DOG FOOD</span><br />
            <span class="small_white_text_box">plus vitamins and minerals</span>
            <p>High quality ingredients you want with none that you don't, <br />so you can see a real difference in your dog.</p><a href="/natural-food-for-dogs">LEARN MORE &#187;</a>
          </div>
        </div><!-- End Left Column -->
        <!-- Begin Right Column -->

        <div class="rightcol">
          <div id="large_promo">
            <span class="large_brown_text"><a href="#">TRY &amp; SAVE</a></span>
          </div>
        </div><!-- End Right Column -->
        <!-- Begin Clear Content -->

        <div id="clear_content"></div><!-- End Clear Content -->
      </div><!-- End Content -->
    </div><!-- End Content Wrap -->